# ----------------------------------------
# Nexus Repository Manager Configuration
# ----------------------------------------
NEXUS_URL         = http://your-nexus-server:8081
NEXUS_USERNAME    = admin
NEXUS_PASSWORD    = your-admin-password

# ----------------------------------------
# IQ Server Configuration
# ----------------------------------------
IQSERVER_URL      = http://your-iqserver:8070
IQSERVER_USERNAME = your-iq-username
IQSERVER_PASSWORD = your-iq-password

# ----------------------------------------
# API Authentication
# ----------------------------------------
API_TOKEN         = your_secure_token_here

# ----------------------------------------
# Server Settings
# ----------------------------------------
API_HOST        = 127.0.0.1       # API server host (127.0.0.1 for localhost only)
PORT              = 5000            # API server port
DEBUG             = false
LOG_LEVEL         = INFO            # Logging level (DEBUG, INFO, WARNING, ERROR)

# ----------------------------------------
# Role Management (optional)
# ----------------------------------------
EXTRA_ROLE        = role1,role2     # Comma-separated additional roles
